{
  "name": "react-tsx-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.6",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.101",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "dayjs": "^1.11.11",
    "http-proxy-middleware": "^3.0.0",
    "postcss-px-to-viewport": "^1.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.24.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "craco start",
    "build:test": "craco build --mode test",
    "build:pre": "craco build --mode pre",
    "build": "craco build",
    "test": "craco test",
    "eject": "craco eject",
    "changelog": "turbo run changelog",
    "prepare": "husky install",
    "precommit": "lint-staged --no-stash",
    "lint": "eslint src/**",
    "fix": "prettier src/**  --write",
    "stylelint": "stylelint src/**/*.{css,less} --cache --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@craco/craco": "^7.1.0",
    "conventional-changelog-cli": "^5.0.0",
    "craco-less": "^3.0.1",
    "craco-plugin-env": "^1.0.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^9.0.11",
    "less": "^4.2.0",
    "less-loader": "^12.2.0",
    "lint-staged": "^15.2.7",
    "prettier": "^2.8.8",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "eslint --color"
    ],
    "*.{less,css}": [
      "stylelint --fix **/*.css"
    ]
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
